<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/cis_edit_text_bg" />
            <stroke
                android:color="@color/focused"
                android:width="@dimen/border_width" />
        </shape>
    </item>
    
    <item>
        <shape>
            <solid android:color="@color/cis_edit_text_bg" />
            <stroke
                android:color="@color/cis_edit_text_border"
                android:width="@dimen/border_width" />
        </shape>
    </item>
    
</selector>