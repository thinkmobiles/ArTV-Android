<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- main distance between elements -->
    <dimen name="main_distance">8dp</dimen>
    <dimen name="element_width">120dp</dimen>
    <dimen name="border_width">1dp</dimen>

    <color name="text">@android:color/black</color>

    <color name="button">#3A77FC</color>
    <color name="button_bg">@android:color/transparent</color>
    <color name="button_bg_pressed">#443A77FC</color>
    <dimen name="button_height">30dp</dimen>


    <dimen name="cis_padding_top">10dp</dimen>
    <dimen name="cis_padding_bottom">30dp</dimen>
    <dimen name="cis_logo_width">200dp</dimen>

    <dimen name="cis_edit_text_height">35dp</dimen>
    <dimen name="cis_edit_text_padding_horizontal">3dp</dimen>
    <color name="cis_edit_text_bg">@android:color/white</color>
    <color name="cis_edit_text_border">#D5D9DC</color>


    <style name="TextSmall">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="TextMedium">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Button">
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/button</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:padding">@dimen/main_distance</item>
    </style>

    <style name="LogoImage">
        <item name="android:src">@drawable/logo</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="CIS_EditText" parent="@android:style/Widget.EditText">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/cis_bg_edit_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>

</resources>