<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="cis_padding_top">10dp</dimen>
    <dimen name="cis_padding_bottom">30dp</dimen>
    <!-- main distance between elements -->
    <dimen name="cis_main_distance">8dp</dimen>

    <dimen name="cis_logo_width">200dp</dimen>

    <color name="cis_text">@android:color/black</color>

    <dimen name="cis_edit_text_height">35dp</dimen>
    <color name="cis_edit_text_bg">@android:color/white</color>
    <color name="cis_edit_text_border">#D5D9DC</color>

    <dimen name="cis_element_width">120dp</dimen>
    <dimen name="cis_border_width">1dp</dimen>

    <color name="cis_button">#3A77FC</color>
    <color name="cis_button_bg">@android:color/transparent</color>
    <color name="cis_button_bg_pressed">#443A77FC</color>
    <dimen name="cis_button_height">30dp</dimen>

    <!--<dimen name="dcis_"></dimen>-->

    <style name="CIS_TextSmall">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/cis_text</item>
    </style>

    <style name="CIS_TextMedium">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/cis_text</item>
    </style>

    <style name="CIS_EditText" parent="@android:style/Widget.EditText">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/cis_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/cis_bg_edit_text</item>
    </style>

    <style name="CIS_Button">
        <item name="android:minHeight">@dimen/cis_button_height</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/cis_button</item>
        <item name="android:background">@drawable/cis_bg_button</item>
    </style>

</resources>